---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import FormattedDate from './FormattedDate.astro'
import { getCategoryStyle } from '../utils/category-colors'

interface Props {
  title: string
  description: string
  pubDate: Date
  heroImage?: ImageMetadata
  slug: string
  category?: string
  tags?: string[]
  featured?: boolean
  readingTime?: number
  animationIndex?: number
}

const {
  title,
  description,
  pubDate,
  heroImage,
  slug,
  category,
  tags = [],
  featured = false,
  readingTime,
  animationIndex = 0,
} = Astro.props

const animationDelay = animationIndex * 100

const href = `/blog/${slug}/`
const categoryStyle = category ? getCategoryStyle(category) : null
---

<article class:list={['post-card', { featured }]} data-animate="fade-up" data-delay={animationDelay}>
  {
    heroImage && (
      <a href={href} class="card-image">
        <Image
          src={heroImage}
          alt={title}
          width={featured ? 800 : 400}
          height={featured ? 400 : 200}
          loading="lazy"
        />
        {featured && <span class="featured-badge">Featured</span>}
      </a>
    )
  }

  <div class="card-content">
    <div class="card-meta">
      {category && categoryStyle && (
        <span class="category" style={`background: ${categoryStyle.gradient}`}>{category}</span>
      )}
      <FormattedDate date={pubDate} />
      {
        readingTime && (
          <span class="reading-time">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="14"
              height="14"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <circle cx="12" cy="12" r="10" />
              <polyline points="12 6 12 12 16 14" />
            </svg>
            {readingTime} min read
          </span>
        )
      }
    </div>

    <h3 class="card-title">
      <a href={href}>{title}</a>
    </h3>

    <p class="card-description">{description}</p>

    {
      tags.length > 0 && (
        <div class="card-tags">
          {tags.slice(0, 3).map((tag) => (
            <a href={`/tags/${tag}/`} class="tag">
              #{tag}
            </a>
          ))}
        </div>
      )
    }
  </div>
</article>

<style>
  .post-card {
    display: flex;
    flex-direction: column;
    background: var(--bg-elevated);
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--border-primary);
    transition: all var(--transition-normal) ease;
  }

  .post-card:hover {
    border-color: var(--sip-primary);
    box-shadow:
      0 4px 20px rgba(99, 102, 241, 0.15),
      0 2px 8px rgba(0, 0, 0, 0.05);
    transform: translateY(-4px);
  }

  .post-card.featured {
    grid-column: span 2;
  }

  .card-image {
    display: block;
    position: relative;
    overflow: hidden;
    aspect-ratio: 2 / 1;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow) ease;
  }

  .post-card:hover .card-image img {
    transform: scale(1.03);
  }

  .featured-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--sip-gradient);
    color: white;
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.375rem 0.75rem;
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    padding: 1.25rem;
  }

  .card-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    font-size: 0.8125rem;
    color: var(--text-tertiary);
  }

  .category {
    color: white;
    padding: 0.25rem 0.625rem;
    border-radius: var(--radius-sm);
    font-size: 0.6875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .reading-time {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .card-title {
    font-size: 1.25rem;
    line-height: 1.35;
    margin: 0;
    font-weight: 600;
  }

  .card-title a {
    color: var(--text-primary);
    text-decoration: none;
    transition: color var(--transition-fast) ease;
  }

  .card-title a:hover {
    color: var(--sip-primary);
  }

  .card-description {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.25rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--sip-primary);
    background: rgba(99, 102, 241, 0.1);
    padding: 0.25rem 0.625rem;
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: all var(--transition-fast) ease;
  }

  .tag:hover {
    background: var(--sip-primary);
    color: white;
  }

  @media (max-width: 768px) {
    .post-card.featured {
      grid-column: span 1;
    }

    .card-title {
      font-size: 1.125rem;
    }
  }
</style>
