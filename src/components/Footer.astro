---
import { SITE_TITLE, TWITTER_HANDLE, GITHUB_URL } from '../consts'

const currentYear = new Date().getFullYear()
---

<footer>
  <div class="footer-content">
    <div class="footer-brand">
      <a href="/" class="footer-logo">
        <img src="/logo-64.png" alt="SIP Protocol" class="logo-img" width="28" height="28" />
        <span>{SITE_TITLE}</span>
      </a>
      <p class="tagline">The privacy standard for Web3</p>
    </div>

    <div class="footer-links">
      <div class="link-group">
        <h4>Product</h4>
        <a href="https://sip-protocol.org">Website</a>
        <a href="https://docs.sip-protocol.org">Documentation</a>
        <a href={GITHUB_URL}>GitHub</a>
      </div>

      <div class="link-group">
        <h4>Blog</h4>
        <a href="/blog">All Posts</a>
        <a href="/rss.xml">RSS Feed</a>
        <a href="/llms.txt">llms.txt</a>
      </div>

      <div class="link-group">
        <h4>Community</h4>
        <a
          href={`https://x.com/${TWITTER_HANDLE.replace('@', '')}`}
          target="_blank"
          rel="noopener"
        >
          Twitter
        </a>
        <a href={GITHUB_URL} target="_blank" rel="noopener">GitHub</a>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <p>&copy; {currentYear} SIP Protocol. MIT License.</p>
    <p class="built-with">
      Built with <a href="https://astro.build" target="_blank" rel="noopener">Astro</a>
    </p>
  </div>
</footer>

<style>
  footer {
    background: rgb(var(--gray-dark));
    color: rgb(var(--gray-light));
    padding: 3rem 1.5rem 2rem;
    margin-top: auto;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: white;
    font-weight: 700;
    font-size: 1.125rem;
  }

  .logo-img {
    border-radius: 4px;
  }

  .tagline {
    color: rgb(var(--gray));
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .link-group {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .link-group h4 {
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin: 0 0 0.5rem;
  }

  .link-group a {
    color: rgb(var(--gray));
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .link-group a:hover {
    color: white;
  }

  .footer-bottom {
    max-width: 1200px;
    margin: 2rem auto 0;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    color: rgb(var(--gray));
  }

  .footer-bottom p {
    margin: 0;
  }

  .built-with a {
    color: var(--sip-primary);
    text-decoration: none;
  }

  .built-with a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-bottom {
      flex-direction: column;
      gap: 0.5rem;
      text-align: center;
    }
  }
</style>
