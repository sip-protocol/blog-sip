---
import { SITE_TITLE, TWITTER_HANDLE, GITHUB_URL } from '../consts'
import HeaderLink from './HeaderLink.astro'
---

<header>
  <nav>
    <div class="nav-brand">
      <a href="/" class="logo">
        <span class="logo-icon">üõ°Ô∏è</span>
        <span class="logo-text">{SITE_TITLE}</span>
      </a>
    </div>

    <div class="nav-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <a href="https://docs.sip-protocol.org" target="_blank" rel="noopener">
        Docs
      </a>
    </div>

    <div class="nav-social">
      <a
        href={`https://twitter.com/${TWITTER_HANDLE.replace('@', '')}`}
        target="_blank"
        rel="noopener"
        aria-label="Follow SIP Protocol on Twitter"
      >
        <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true">
          <path
            fill="currentColor"
            d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
          />
        </svg>
      </a>
      <a
        href={GITHUB_URL}
        target="_blank"
        rel="noopener"
        aria-label="SIP Protocol on GitHub"
      >
        <svg viewBox="0 0 16 16" width="24" height="24" aria-hidden="true">
          <path
            fill="currentColor"
            d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
          />
        </svg>
      </a>
    </div>

    <button class="mobile-menu-btn" aria-label="Toggle menu" aria-expanded="false">
      <svg viewBox="0 0 24 24" width="24" height="24" aria-hidden="true">
        <path
          fill="currentColor"
          d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"
        />
      </svg>
    </button>
  </nav>
</header>

<style>
  header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid rgb(var(--gray-light));
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0.75rem 1.5rem;
  }

  .nav-brand {
    flex-shrink: 0;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.125rem;
    color: rgb(var(--black));
  }

  .logo:hover {
    color: var(--sip-primary);
  }

  .logo-icon {
    font-size: 1.5rem;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .nav-links a {
    padding: 0.5rem 1rem;
    color: rgb(var(--gray-dark));
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .nav-links a:hover {
    background: rgba(var(--gray-light), 0.5);
    color: var(--sip-primary);
  }

  .nav-links a.active {
    color: var(--sip-primary);
    font-weight: 500;
  }

  .nav-social {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-social a {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    color: rgb(var(--gray));
    border-radius: 6px;
    transition: all 0.2s ease;
  }

  .nav-social a:hover {
    background: rgba(var(--gray-light), 0.5);
    color: var(--sip-primary);
  }

  .mobile-menu-btn {
    display: none;
    padding: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    color: rgb(var(--gray-dark));
  }

  @media (max-width: 768px) {
    .nav-links,
    .nav-social {
      display: none;
    }

    .mobile-menu-btn {
      display: flex;
    }
  }
</style>
