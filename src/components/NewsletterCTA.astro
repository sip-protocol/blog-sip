---
/**
 * NewsletterCTA - Animated newsletter subscription with gradient border
 * Integrates with Buttondown API for privacy-respecting email collection
 */
interface Props {
  title?: string
  description?: string
  compact?: boolean
}

const {
  title = 'Stay Updated',
  description = 'Get the latest privacy insights delivered to your inbox.',
  compact = false,
} = Astro.props
---

<section class:list={['newsletter-cta', { compact }]} data-animate="fade-up">
  <div class="newsletter-card">
    <div class="newsletter-content">
      <div class="newsletter-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="16" x="2" y="4" rx="2"></rect>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
        </svg>
      </div>
      <h3 class="newsletter-title">{title}</h3>
      <p class="newsletter-description">{description}</p>
    </div>

    <form class="newsletter-form" data-newsletter-form>
      <div class="form-row">
        <div class="input-wrapper">
          <input
            type="email"
            name="email"
            placeholder="your@email.com"
            required
            autocomplete="email"
            aria-label="Email address"
            class="newsletter-input"
          />
          <span class="input-error" aria-live="polite"></span>
        </div>
        <button type="submit" class="newsletter-button">
          <span class="btn-text">Subscribe</span>
          <span class="btn-loading" aria-hidden="true">
            <svg class="spinner" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-dasharray="32" stroke-dashoffset="12"></circle>
            </svg>
          </span>
          <span class="btn-success" aria-hidden="true">
            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </span>
        </button>
      </div>
      <p class="newsletter-disclaimer">No spam. Unsubscribe anytime.</p>
    </form>

    <div class="newsletter-success" aria-live="polite" hidden>
      <div class="success-icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
          <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
      </div>
      <h4>Thanks for subscribing!</h4>
      <p>Check your inbox to confirm your subscription.</p>
    </div>
  </div>
</section>

<script>
  function initNewsletterForms() {
    document.querySelectorAll('[data-newsletter-form]').forEach((form) => {
      if (form.dataset.initialized) return
      form.dataset.initialized = 'true'

      const input = form.querySelector('.newsletter-input') as HTMLInputElement
      const button = form.querySelector('.newsletter-button') as HTMLButtonElement
      const errorSpan = form.querySelector('.input-error') as HTMLSpanElement
      const section = form.closest('.newsletter-cta') as HTMLElement
      const successDiv = section?.querySelector('.newsletter-success') as HTMLElement

      // Email validation
      function validateEmail(email: string): boolean {
        const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
        return re.test(email)
      }

      function showError(message: string) {
        errorSpan.textContent = message
        input.classList.add('error')
        input.setAttribute('aria-invalid', 'true')
      }

      function clearError() {
        errorSpan.textContent = ''
        input.classList.remove('error')
        input.removeAttribute('aria-invalid')
      }

      function setLoading(loading: boolean) {
        button.classList.toggle('loading', loading)
        button.disabled = loading
        input.disabled = loading
      }

      function showSuccess() {
        form.setAttribute('hidden', '')
        successDiv.removeAttribute('hidden')
        successDiv.classList.add('show')

        if (window.showToast) {
          window.showToast('Successfully subscribed!', 'success')
        }
      }

      // Real-time validation
      input.addEventListener('blur', () => {
        if (input.value && !validateEmail(input.value)) {
          showError('Please enter a valid email address')
        } else {
          clearError()
        }
      })

      input.addEventListener('input', () => {
        if (input.classList.contains('error')) {
          clearError()
        }
      })

      // Form submission
      form.addEventListener('submit', async (e) => {
        e.preventDefault()
        clearError()

        const email = input.value.trim()

        if (!email) {
          showError('Email is required')
          input.focus()
          return
        }

        if (!validateEmail(email)) {
          showError('Please enter a valid email address')
          input.focus()
          return
        }

        setLoading(true)

        try {
          const response = await fetch('/api/newsletter', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ email }),
          })

          const data = await response.json()

          if (!response.ok) {
            throw new Error(data.error || 'Subscription failed')
          }

          showSuccess()
        } catch (err) {
          const message = err instanceof Error ? err.message : 'Something went wrong'
          showError(message)

          if (window.showToast) {
            window.showToast(message, 'error')
          }
        } finally {
          setLoading(false)
        }
      })
    })
  }

  initNewsletterForms()
  document.addEventListener('astro:after-swap', initNewsletterForms)
</script>

<style>
  .newsletter-cta {
    padding: 3rem 0;
  }

  .newsletter-cta.compact {
    padding: 2rem 0;
  }

  .newsletter-card {
    position: relative;
    background: var(--bg-secondary);
    border-radius: var(--radius-xl);
    padding: 2.5rem;
    text-align: center;
    overflow: hidden;
  }

  /* Animated gradient border */
  .newsletter-card::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: var(--radius-xl);
    padding: 2px;
    background: linear-gradient(
      var(--gradient-angle, 0deg),
      var(--sip-primary),
      var(--sip-secondary),
      var(--sip-accent),
      var(--sip-primary)
    );
    -webkit-mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    mask:
      linear-gradient(#fff 0 0) content-box,
      linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask-composite: exclude;
    animation: gradient-rotate 4s linear infinite;
  }

  @keyframes gradient-rotate {
    to {
      --gradient-angle: 360deg;
    }
  }

  @property --gradient-angle {
    syntax: '<angle>';
    initial-value: 0deg;
    inherits: false;
  }

  .compact .newsletter-card {
    padding: 1.5rem 2rem;
  }

  .newsletter-content {
    margin-bottom: 1.5rem;
  }

  .compact .newsletter-content {
    margin-bottom: 1rem;
  }

  .newsletter-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: var(--sip-gradient);
    border-radius: var(--radius-lg);
    color: white;
    margin-bottom: 1rem;
  }

  .compact .newsletter-icon {
    width: 2.5rem;
    height: 2.5rem;
    margin-bottom: 0.75rem;
  }

  .compact .newsletter-icon svg {
    width: 20px;
    height: 20px;
  }

  .newsletter-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
  }

  .compact .newsletter-title {
    font-size: 1.25rem;
  }

  .newsletter-description {
    font-size: 1rem;
    color: var(--text-secondary);
    margin: 0;
    max-width: 400px;
    margin-inline: auto;
  }

  .compact .newsletter-description {
    font-size: 0.875rem;
  }

  .newsletter-form {
    max-width: 420px;
    margin: 0 auto;
  }

  .form-row {
    display: flex;
    gap: 0.75rem;
  }

  .input-wrapper {
    flex: 1;
    position: relative;
  }

  .newsletter-input {
    width: 100%;
    padding: 0.875rem 1rem;
    font-size: 1rem;
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    background: var(--bg-primary);
    color: var(--text-primary);
    transition: all var(--transition-fast) ease;
  }

  .newsletter-input::placeholder {
    color: var(--text-muted);
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--sip-primary);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.15);
  }

  .newsletter-input.error {
    border-color: var(--color-error, #ef4444);
    box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.15);
  }

  .newsletter-input:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .input-error {
    position: absolute;
    bottom: -1.25rem;
    left: 0;
    font-size: 0.75rem;
    color: var(--color-error, #ef4444);
  }

  .newsletter-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: white;
    background: var(--sip-gradient);
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-fast) ease;
    min-width: 120px;
  }

  .newsletter-button:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.4);
  }

  .newsletter-button:active:not(:disabled) {
    transform: translateY(0);
  }

  .newsletter-button:disabled {
    cursor: not-allowed;
  }

  .btn-loading,
  .btn-success {
    display: none;
  }

  .newsletter-button.loading .btn-text {
    display: none;
  }

  .newsletter-button.loading .btn-loading {
    display: block;
  }

  .spinner {
    width: 18px;
    height: 18px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .newsletter-disclaimer {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 1rem 0 0;
  }

  /* Success state */
  .newsletter-success {
    text-align: center;
    padding: 1rem 0;
  }

  .newsletter-success[hidden] {
    display: none;
  }

  .newsletter-success.show {
    animation: success-pop 0.4s ease-out;
  }

  @keyframes success-pop {
    0% {
      opacity: 0;
      transform: scale(0.8);
    }
    50% {
      transform: scale(1.05);
    }
    100% {
      opacity: 1;
      transform: scale(1);
    }
  }

  .success-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 4rem;
    height: 4rem;
    background: rgba(34, 197, 94, 0.1);
    border-radius: 50%;
    color: #22c55e;
    margin-bottom: 1rem;
  }

  .newsletter-success h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
  }

  .newsletter-success p {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 480px) {
    .newsletter-card {
      padding: 2rem 1.5rem;
    }

    .form-row {
      flex-direction: column;
    }

    .newsletter-button {
      width: 100%;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .newsletter-card::before {
      animation: none;
    }

    .newsletter-success.show {
      animation: none;
    }

    .spinner {
      animation: none;
    }
  }
</style>
