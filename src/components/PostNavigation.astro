---
/**
 * PostNavigation - Previous/Next post navigation
 * Shows links to adjacent posts at the bottom of articles
 */
interface Post {
  slug: string
  title: string
}

interface Props {
  prevPost?: Post
  nextPost?: Post
}

const { prevPost, nextPost } = Astro.props
---

{
  (prevPost || nextPost) && (
    <nav class="post-nav" aria-label="Post navigation">
      <div class="post-nav-inner">
        {prevPost ? (
          <a href={`/blog/${prevPost.slug}/`} class="post-nav-link prev">
            <span class="post-nav-label">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <polyline points="15 18 9 12 15 6" />
              </svg>
              Previous
            </span>
            <span class="post-nav-title">{prevPost.title}</span>
          </a>
        ) : (
          <div class="post-nav-placeholder" />
        )}

        {nextPost ? (
          <a href={`/blog/${nextPost.slug}/`} class="post-nav-link next">
            <span class="post-nav-label">
              Next
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="16"
                height="16"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                aria-hidden="true"
              >
                <polyline points="9 18 15 12 9 6" />
              </svg>
            </span>
            <span class="post-nav-title">{nextPost.title}</span>
          </a>
        ) : (
          <div class="post-nav-placeholder" />
        )}
      </div>
    </nav>
  )
}

<style>
  .post-nav {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-primary);
  }

  .post-nav-inner {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
  }

  .post-nav-link {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1.25rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition-normal) ease;
  }

  .post-nav-link:hover {
    border-color: var(--sip-primary);
    background: var(--bg-tertiary);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.1);
  }

  .post-nav-link.next {
    text-align: right;
  }

  .post-nav-label {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--sip-primary);
  }

  .post-nav-link.next .post-nav-label {
    justify-content: flex-end;
  }

  .post-nav-label svg {
    transition: transform var(--transition-fast) ease;
  }

  .post-nav-link.prev:hover .post-nav-label svg {
    transform: translateX(-3px);
  }

  .post-nav-link.next:hover .post-nav-label svg {
    transform: translateX(3px);
  }

  .post-nav-title {
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-primary);
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-nav-placeholder {
    /* Empty placeholder for grid alignment */
  }

  @media (max-width: 640px) {
    .post-nav-inner {
      grid-template-columns: 1fr;
    }

    .post-nav-link.next {
      text-align: left;
    }

    .post-nav-link.next .post-nav-label {
      justify-content: flex-start;
    }

    .post-nav-placeholder {
      display: none;
    }
  }
</style>

<script>
  // Keyboard navigation for posts
  function initKeyboardNav() {
    const prevLink = document.querySelector('.post-nav-link.prev') as HTMLAnchorElement
    const nextLink = document.querySelector('.post-nav-link.next') as HTMLAnchorElement

    function handleKeydown(e: KeyboardEvent) {
      // Only trigger if not in an input/textarea
      if (
        document.activeElement?.tagName === 'INPUT' ||
        document.activeElement?.tagName === 'TEXTAREA'
      ) {
        return
      }

      if (e.key === 'ArrowLeft' && prevLink) {
        prevLink.click()
      } else if (e.key === 'ArrowRight' && nextLink) {
        nextLink.click()
      }
    }

    document.addEventListener('keydown', handleKeydown)

    // Cleanup on page transition
    document.addEventListener(
      'astro:before-swap',
      () => {
        document.removeEventListener('keydown', handleKeydown)
      },
      { once: true }
    )
  }

  initKeyboardNav()
  document.addEventListener('astro:after-swap', initKeyboardNav)
</script>
