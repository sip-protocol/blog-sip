---
/**
 * Callout - Highlighted content blocks for tips, warnings, and info
 */
interface Props {
  type?: 'info' | 'warning' | 'tip' | 'danger'
  title?: string
}

const { type = 'info', title } = Astro.props

const icons = {
  info: '‚ÑπÔ∏è',
  warning: '‚ö†Ô∏è',
  tip: 'üí°',
  danger: 'üö®',
}

const defaultTitles = {
  info: 'Info',
  warning: 'Warning',
  tip: 'Tip',
  danger: 'Danger',
}
---

<aside class:list={['callout', `callout-${type}`]} role="note">
  <div class="callout-header">
    <span class="callout-icon" aria-hidden="true">{icons[type]}</span>
    <strong class="callout-title">{title || defaultTitles[type]}</strong>
  </div>
  <div class="callout-content">
    <slot />
  </div>
</aside>

<style>
  .callout {
    border-radius: 8px;
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
    border-left: 4px solid;
  }

  .callout-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .callout-icon {
    font-size: 1.125rem;
  }

  .callout-title {
    font-size: 0.9375rem;
    font-weight: 600;
  }

  .callout-content {
    font-size: 0.9375rem;
    line-height: 1.6;
  }

  .callout-content :global(p) {
    margin: 0;
  }

  .callout-content :global(p + p) {
    margin-top: 0.75rem;
  }

  /* Info (default) */
  .callout-info {
    background: rgba(99, 102, 241, 0.1);
    border-color: var(--sip-primary);
  }

  .callout-info .callout-title {
    color: var(--sip-primary);
  }

  /* Warning */
  .callout-warning {
    background: rgba(245, 158, 11, 0.1);
    border-color: #f59e0b;
  }

  .callout-warning .callout-title {
    color: #d97706;
  }

  /* Tip */
  .callout-tip {
    background: rgba(16, 185, 129, 0.1);
    border-color: #10b981;
  }

  .callout-tip .callout-title {
    color: #059669;
  }

  /* Danger */
  .callout-danger {
    background: rgba(239, 68, 68, 0.1);
    border-color: #ef4444;
  }

  .callout-danger .callout-title {
    color: #dc2626;
  }
</style>
