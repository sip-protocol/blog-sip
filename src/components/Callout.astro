---
/**
 * Callout - Highlighted content blocks for tips, warnings, and info
 */
interface Props {
  type?: 'info' | 'warning' | 'tip' | 'danger' | 'note'
  title?: string
}

const { type = 'info', title } = Astro.props

const defaultTitles = {
  info: 'Info',
  warning: 'Warning',
  tip: 'Tip',
  danger: 'Danger',
  note: 'Note',
}
---

<aside class:list={['callout', `callout-${type}`]} role="note" data-animate="slide-left">
  <div class="callout-header">
    {type === 'info' && (
      <svg class="callout-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <path d="M12 16v-4"></path>
        <path d="M12 8h.01"></path>
      </svg>
    )}
    {type === 'warning' && (
      <svg class="callout-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="m21.73 18-8-14a2 2 0 0 0-3.48 0l-8 14A2 2 0 0 0 4 21h16a2 2 0 0 0 1.73-3Z"></path>
        <path d="M12 9v4"></path>
        <path d="M12 17h.01"></path>
      </svg>
    )}
    {type === 'tip' && (
      <svg class="callout-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M15 14c.2-1 .7-1.7 1.5-2.5 1-.9 1.5-2.2 1.5-3.5A6 6 0 0 0 6 8c0 1 .2 2.2 1.5 3.5.7.7 1.3 1.5 1.5 2.5"></path>
        <path d="M9 18h6"></path>
        <path d="M10 22h4"></path>
      </svg>
    )}
    {type === 'danger' && (
      <svg class="callout-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="10"></circle>
        <path d="m15 9-6 6"></path>
        <path d="m9 9 6 6"></path>
      </svg>
    )}
    {type === 'note' && (
      <svg class="callout-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 20h9"></path>
        <path d="M16.5 3.5a2.12 2.12 0 0 1 3 3L7 19l-4 1 1-4Z"></path>
      </svg>
    )}
    <strong class="callout-title">{title || defaultTitles[type]}</strong>
  </div>
  <div class="callout-content">
    <slot />
  </div>
</aside>

<style>
  .callout {
    border-radius: var(--radius-lg);
    padding: 1rem 1.25rem;
    margin: 1.5rem 0;
    border-left: 4px solid;
    border: 1px solid;
    border-left-width: 4px;
  }

  .callout-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .callout-icon {
    flex-shrink: 0;
  }

  .callout-title {
    font-size: 0.875rem;
    font-weight: 600;
  }

  .callout-content {
    font-size: 0.9375rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .callout-content :global(p) {
    margin: 0;
  }

  .callout-content :global(p + p) {
    margin-top: 0.75rem;
  }

  .callout-content :global(code) {
    font-size: 0.875em;
  }

  /* Info (default) */
  .callout-info {
    background: rgba(59, 130, 246, 0.08);
    border-color: rgba(59, 130, 246, 0.2);
    border-left-color: var(--color-info);
  }

  .callout-info .callout-icon,
  .callout-info .callout-title {
    color: var(--color-info);
  }

  /* Warning */
  .callout-warning {
    background: rgba(245, 158, 11, 0.08);
    border-color: rgba(245, 158, 11, 0.2);
    border-left-color: var(--color-warning);
  }

  .callout-warning .callout-icon,
  .callout-warning .callout-title {
    color: var(--color-warning);
  }

  /* Tip */
  .callout-tip {
    background: rgba(16, 185, 129, 0.08);
    border-color: rgba(16, 185, 129, 0.2);
    border-left-color: var(--color-success);
  }

  .callout-tip .callout-icon,
  .callout-tip .callout-title {
    color: var(--color-success);
  }

  /* Danger */
  .callout-danger {
    background: rgba(239, 68, 68, 0.08);
    border-color: rgba(239, 68, 68, 0.2);
    border-left-color: var(--color-error);
  }

  .callout-danger .callout-icon,
  .callout-danger .callout-title {
    color: var(--color-error);
  }

  /* Note - Purple */
  .callout-note {
    background: rgba(139, 92, 246, 0.08);
    border-color: rgba(139, 92, 246, 0.2);
    border-left-color: #8b5cf6;
  }

  .callout-note .callout-icon,
  .callout-note .callout-title {
    color: #8b5cf6;
  }
</style>
