---
/**
 * FeaturedPost - Spotlight card for featured article
 * Features: large layout, hero image, category badge, prominent CTA
 */
import { Image } from 'astro:assets'
import FormattedDate from './FormattedDate.astro'
import { getCategoryStyle } from '../utils/category-colors'

interface Props {
  title: string
  description: string
  pubDate: Date
  heroImage?: ImageMetadata
  slug: string
  category?: string
  tags?: string[]
  readingTime?: number
}

const {
  title,
  description,
  pubDate,
  heroImage,
  slug,
  category,
  tags,
  readingTime,
} = Astro.props

const categoryStyle = category ? getCategoryStyle(category) : null
---

<section class="featured-section" data-animate="fade-up">
  <h2 class="section-title">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
    </svg>
    Featured
  </h2>

  <a href={`/blog/${slug}/`} class="featured-card">
    {heroImage && (
      <div class="featured-image">
        <Image
          src={heroImage}
          alt={title}
          width={600}
          height={340}
        />
      </div>
    )}

    <div class="featured-content">
      <div class="featured-meta">
        {category && categoryStyle && (
          <span class="featured-category" style={`background: ${categoryStyle.gradient}`}>
            {category}
          </span>
        )}
        <time datetime={pubDate.toISOString()}>
          <FormattedDate date={pubDate} />
        </time>
        {readingTime && (
          <span class="featured-reading">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
            {readingTime} min read
          </span>
        )}
      </div>

      <h3 class="featured-title">{title}</h3>

      <p class="featured-description">{description}</p>

      {tags && tags.length > 0 && (
        <div class="featured-tags">
          {tags.slice(0, 4).map((tag) => (
            <span class="featured-tag">#{tag}</span>
          ))}
        </div>
      )}

      <span class="featured-cta">
        Read Article
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </span>
    </div>
  </a>
</section>

<style>
  .featured-section {
    margin-bottom: 3.5rem;
  }

  .section-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 1.5rem;
    color: var(--text-primary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .section-title svg {
    color: var(--sip-primary);
  }

  .section-title::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-primary);
    margin-left: 0.75rem;
  }

  .featured-card {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    padding: 1.5rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    text-decoration: none;
    transition: all var(--transition-normal) ease;
    overflow: hidden;
  }

  .featured-card:hover {
    border-color: var(--sip-primary);
    box-shadow: 0 8px 30px rgba(99, 102, 241, 0.12);
    transform: translateY(-4px);
  }

  .featured-image {
    border-radius: var(--radius-lg);
    overflow: hidden;
    aspect-ratio: 16 / 9;
  }

  .featured-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-normal) ease;
  }

  .featured-card:hover .featured-image img {
    transform: scale(1.03);
  }

  .featured-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.875rem;
  }

  .featured-meta {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.75rem;
    font-size: 0.875rem;
    color: var(--text-tertiary);
  }

  .featured-category {
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .featured-reading {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .featured-reading svg {
    opacity: 0.7;
  }

  .featured-title {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1.3;
    margin: 0;
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .featured-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .featured-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .featured-tag {
    font-size: 0.75rem;
    color: var(--sip-primary);
    background: rgba(99, 102, 241, 0.1);
    padding: 0.25rem 0.625rem;
    border-radius: var(--radius-sm);
  }

  .featured-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: auto;
    font-weight: 600;
    color: var(--sip-primary);
    transition: gap var(--transition-fast) ease;
  }

  .featured-card:hover .featured-cta {
    gap: 0.75rem;
  }

  .featured-cta svg {
    transition: transform var(--transition-fast) ease;
  }

  .featured-card:hover .featured-cta svg {
    transform: translateX(4px);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .featured-card {
      grid-template-columns: 1fr;
      gap: 1.25rem;
      padding: 1rem;
    }

    .featured-image {
      aspect-ratio: 16 / 9;
    }

    .featured-title {
      font-size: 1.25rem;
    }

    .featured-description {
      font-size: 0.9375rem;
      -webkit-line-clamp: 2;
    }
  }
</style>
