---
/**
 * HomepageHero - Premium hero section with gradient background and CTAs
 * Features: animated headline, gradient mesh, subscribe/docs buttons
 */
import { SITE_DESCRIPTION } from '../consts'

interface Props {
  title?: string
  tagline?: string
}

const {
  title = 'SIP Protocol Blog',
  tagline = SITE_DESCRIPTION,
} = Astro.props
---

<section class="homepage-hero">
  <div class="hero-gradient"></div>
  <div class="hero-content">
    <div class="hero-badge animate-in" style="--delay: 0ms">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
      </svg>
      <span>The Privacy Standard for Web3</span>
    </div>

    <h1 class="hero-title animate-in" style="--delay: 100ms">
      {title}
    </h1>

    <p class="hero-tagline animate-in" style="--delay: 200ms">
      {tagline}
    </p>

    <div class="hero-ctas animate-in" style="--delay: 300ms">
      <a href="https://docs.sip-protocol.org" class="cta-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"></path>
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"></path>
        </svg>
        Read the Docs
      </a>
      <a href="/rss.xml" class="cta-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M4 11a9 9 0 0 1 9 9"></path>
          <path d="M4 4a16 16 0 0 1 16 16"></path>
          <circle cx="5" cy="19" r="1"></circle>
        </svg>
        Subscribe via RSS
      </a>
    </div>

    <div class="hero-stats animate-in" style="--delay: 400ms">
      <div class="stat">
        <span class="stat-value">Privacy</span>
        <span class="stat-label">by Default</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat">
        <span class="stat-value">Viewing Keys</span>
        <span class="stat-label">for Compliance</span>
      </div>
      <div class="stat-divider"></div>
      <div class="stat">
        <span class="stat-value">Chain</span>
        <span class="stat-label">Agnostic</span>
      </div>
    </div>
  </div>
</section>

<style>
  .homepage-hero {
    position: relative;
    width: 100%;
    padding: 4rem 1.5rem 3rem;
    margin-bottom: 2rem;
    overflow: hidden;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 100% 80% at 50% -30%, rgba(99, 102, 241, 0.2), transparent),
      radial-gradient(ellipse 80% 50% at 100% 50%, rgba(139, 92, 246, 0.12), transparent),
      radial-gradient(ellipse 60% 40% at 0% 70%, rgba(99, 102, 241, 0.1), transparent),
      linear-gradient(to bottom, var(--bg-secondary), var(--bg-primary));
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.25rem;
  }

  /* Animation */
  .animate-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay, 0ms);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .animate-in {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: rgba(99, 102, 241, 0.1);
    border: 1px solid rgba(99, 102, 241, 0.2);
    border-radius: var(--radius-full);
    color: var(--sip-primary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .hero-badge svg {
    flex-shrink: 0;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 3.5rem);
    line-height: 1.1;
    margin: 0;
    background: var(--sip-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: -0.03em;
    font-weight: 700;
  }

  .hero-tagline {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
    max-width: 600px;
  }

  .hero-ctas {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .cta-primary,
  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-lg);
    font-weight: 600;
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all var(--transition-normal) ease;
  }

  .cta-primary {
    background: var(--sip-gradient);
    color: white;
    box-shadow: 0 4px 14px rgba(99, 102, 241, 0.35);
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(99, 102, 241, 0.45);
  }

  .cta-secondary {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    border: 1px solid var(--border-primary);
  }

  .cta-secondary:hover {
    border-color: var(--sip-primary);
    color: var(--sip-primary);
    transform: translateY(-2px);
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-top: 1rem;
    padding: 1rem 1.5rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.125rem;
  }

  .stat-value {
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .stat-label {
    font-size: 0.75rem;
    color: var(--text-tertiary);
  }

  .stat-divider {
    width: 1px;
    height: 2rem;
    background: var(--border-primary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .homepage-hero {
      padding: 3rem 1rem 2rem;
    }

    .hero-tagline {
      font-size: 1.0625rem;
    }

    .hero-ctas {
      flex-direction: column;
      width: 100%;
      max-width: 280px;
    }

    .cta-primary,
    .cta-secondary {
      justify-content: center;
      width: 100%;
    }

    .hero-stats {
      flex-direction: column;
      gap: 0.75rem;
      padding: 1rem;
    }

    .stat-divider {
      width: 100%;
      height: 1px;
    }
  }
</style>
