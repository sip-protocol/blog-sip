---
/**
 * TLDRBox - Summary component for LLMO (LLM Optimization)
 *
 * Provides a structured, extractable summary that AI systems can easily parse.
 * Uses semantic HTML and ARIA for accessibility.
 */
interface Props {
  tldr: string
  keyTakeaways?: string[]
}

const { tldr, keyTakeaways = [] } = Astro.props
---

<aside
  class="tldr-box"
  role="note"
  aria-label="Summary"
  data-llmo="summary"
>
  <div class="tldr-header">
    <svg
      class="tldr-icon"
      xmlns="http://www.w3.org/2000/svg"
      width="20"
      height="20"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      aria-hidden="true"
    >
      <circle cx="12" cy="12" r="10"></circle>
      <path d="M12 16v-4"></path>
      <path d="M12 8h.01"></path>
    </svg>
    <strong class="tldr-title">TL;DR</strong>
  </div>

  <p class="tldr-content" data-llmo="tldr">
    {tldr}
  </p>

  {
    keyTakeaways.length > 0 && (
      <div class="tldr-takeaways">
        <strong class="takeaways-title">Key Takeaways:</strong>
        <ul class="takeaways-list" data-llmo="key-takeaways">
          {keyTakeaways.map((takeaway) => (
            <li>{takeaway}</li>
          ))}
        </ul>
      </div>
    )
  }
</aside>

<style>
  .tldr-box {
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-left: 4px solid var(--sip-primary);
    border-radius: 0 var(--radius-lg) var(--radius-lg) 0;
    padding: 1.5rem;
    margin: 2rem 0;
  }

  .tldr-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
  }

  .tldr-icon {
    color: var(--sip-primary);
    flex-shrink: 0;
  }

  .tldr-title {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--sip-primary);
  }

  .tldr-content {
    font-size: 1.0625rem;
    line-height: 1.7;
    margin: 0;
    color: var(--text-primary);
  }

  .tldr-takeaways {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-primary);
  }

  .takeaways-title {
    font-size: 0.8125rem;
    color: var(--sip-primary);
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .takeaways-list {
    margin: 0.5rem 0 0;
    padding-left: 1.25rem;
    color: var(--text-secondary);
  }

  .takeaways-list li {
    margin: 0.375rem 0;
    line-height: 1.6;
  }

  .takeaways-list li::marker {
    color: var(--sip-primary);
  }
</style>
