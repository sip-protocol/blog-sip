---
/**
 * ArticleHero - Full-width gradient hero section for articles
 * Features: gradient background, animated entrance, category badge, meta info
 */
import FormattedDate from './FormattedDate.astro'
import { getCategoryStyle } from '../utils/category-colors'

interface Props {
  title: string
  description: string
  pubDate: Date
  updatedDate?: Date
  author?: string
  tags?: string[]
  category?: string
  readingTime?: number
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  author,
  tags,
  category,
  readingTime,
} = Astro.props

const categoryStyle = category ? getCategoryStyle(category) : null
---

<header class="article-hero">
  <div class="hero-gradient"></div>
  <div class="hero-content">
    {category && categoryStyle && (
      <span
        class="hero-category animate-in"
        style={`background: ${categoryStyle.gradient}; --delay: 0ms`}
      >
        {category}
      </span>
    )}

    <h1 class="hero-title animate-in" style="--delay: 100ms" itemprop="headline">
      {title}
    </h1>

    <p class="hero-description animate-in" style="--delay: 200ms">
      {description}
    </p>

    <div class="hero-meta animate-in" style="--delay: 300ms">
      <time datetime={pubDate.toISOString()} itemprop="datePublished">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        <FormattedDate date={pubDate} />
      </time>

      {updatedDate && (
        <span class="meta-updated">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"></path>
            <path d="M3 3v5h5"></path>
            <path d="M3 12a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16"></path>
            <path d="M16 21h5v-5"></path>
          </svg>
          <time datetime={updatedDate.toISOString()} itemprop="dateModified">
            <FormattedDate date={updatedDate} />
          </time>
        </span>
      )}

      {readingTime && (
        <span class="meta-reading">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          {readingTime} min read
        </span>
      )}

      {author && (
        <span class="meta-author" itemprop="author" itemscope itemtype="https://schema.org/Person">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <span itemprop="name">{author}</span>
        </span>
      )}
    </div>

    {tags && tags.length > 0 && (
      <div class="hero-tags animate-in" style="--delay: 400ms">
        {tags.map((tag) => (
          <a href={`/tags/${tag}/`} class="hero-tag">
            #{tag}
          </a>
        ))}
      </div>
    )}
  </div>
</header>

<style>
  .article-hero {
    position: relative;
    width: 100%;
    padding: 4rem 1.5rem 3rem;
    overflow: hidden;
  }

  .hero-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(99, 102, 241, 0.15), transparent),
      radial-gradient(ellipse 60% 40% at 80% 50%, rgba(139, 92, 246, 0.1), transparent),
      radial-gradient(ellipse 50% 30% at 20% 80%, rgba(99, 102, 241, 0.08), transparent),
      linear-gradient(to bottom, var(--bg-secondary), var(--bg-primary));
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    max-width: 48rem;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  /* Animation */
  .animate-in {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease forwards;
    animation-delay: var(--delay, 0ms);
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .animate-in {
      opacity: 1;
      transform: none;
      animation: none;
    }
  }

  .hero-category {
    display: inline-block;
    color: white;
    padding: 0.375rem 1rem;
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    box-shadow: 0 2px 8px rgba(99, 102, 241, 0.3);
  }

  .hero-title {
    font-size: clamp(2rem, 5vw, 3rem);
    line-height: 1.15;
    margin: 0.5rem 0;
    color: var(--text-primary);
    letter-spacing: -0.03em;
    font-weight: 700;
    max-width: 100%;
  }

  .hero-description {
    font-size: 1.125rem;
    line-height: 1.6;
    color: var(--text-secondary);
    margin: 0;
    max-width: 600px;
  }

  .hero-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-tertiary);
  }

  .hero-meta time,
  .hero-meta span {
    display: flex;
    align-items: center;
    gap: 0.375rem;
  }

  .hero-meta svg {
    opacity: 0.7;
    flex-shrink: 0;
  }

  .meta-updated {
    color: var(--text-muted);
    font-style: italic;
  }

  .hero-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .hero-tag {
    font-size: 0.8125rem;
    color: var(--sip-primary);
    background: rgba(99, 102, 241, 0.1);
    padding: 0.375rem 0.875rem;
    border-radius: var(--radius-full);
    text-decoration: none;
    transition: all var(--transition-fast) ease;
    border: 1px solid transparent;
  }

  .hero-tag:hover {
    background: var(--sip-primary);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .article-hero {
      padding: 3rem 1rem 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-meta {
      gap: 0.75rem;
      font-size: 0.8125rem;
    }

    .hero-tags {
      gap: 0.375rem;
    }

    .hero-tag {
      font-size: 0.75rem;
      padding: 0.25rem 0.625rem;
    }
  }
</style>
