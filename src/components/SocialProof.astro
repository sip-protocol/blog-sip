---
/**
 * SocialProof - Display GitHub stars, npm downloads, and test stats
 * Data fetched at build time from GitHub and npm APIs
 */

interface Props {
  compact?: boolean
}

const { compact = false } = Astro.props

// GitHub stars - fetch at build time
async function getGitHubStars(): Promise<number> {
  try {
    const response = await fetch('https://api.github.com/repos/sip-protocol/sip-protocol', {
      headers: {
        'Accept': 'application/vnd.github.v3+json',
        'User-Agent': 'SIP-Protocol-Blog',
      },
    })
    if (!response.ok) return 0
    const data = await response.json()
    return data.stargazers_count || 0
  } catch {
    return 0
  }
}

// npm downloads (last month) - fetch at build time
async function getNpmDownloads(): Promise<number> {
  try {
    const response = await fetch(
      'https://api.npmjs.org/downloads/point/last-month/@sip-protocol/sdk'
    )
    if (!response.ok) return 0
    const data = await response.json()
    return data.downloads || 0
  } catch {
    return 0
  }
}

// Fetch data in parallel
const [stars, downloads] = await Promise.all([
  getGitHubStars(),
  getNpmDownloads(),
])

// Hardcoded values from CLAUDE.md
const testCount = 6850

// Format numbers for display
function formatNumber(num: number): string {
  if (num >= 1000000) return `${(num / 1000000).toFixed(1)}M`
  if (num >= 1000) return `${(num / 1000).toFixed(1)}K`
  return num.toLocaleString()
}

const stats = [
  {
    value: stars,
    label: 'GitHub Stars',
    icon: 'star',
    color: '#f59e0b',
  },
  {
    value: downloads,
    label: 'npm Downloads',
    icon: 'download',
    color: '#22c55e',
  },
  {
    value: testCount,
    label: 'Tests Passing',
    icon: 'check',
    color: '#6366f1',
  },
]
---

<section class:list={['social-proof', { compact }]} data-animate="fade-up">
  <div class="stats-grid">
    {stats.map((stat, index) => (
      <div
        class="stat-card"
        data-animate="fade-up"
        data-delay={index * 100}
        style={`--stat-color: ${stat.color}`}
      >
        <div class="stat-icon">
          {stat.icon === 'star' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
            </svg>
          )}
          {stat.icon === 'download' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
              <polyline points="7 10 12 15 17 10" />
              <line x1="12" y1="15" x2="12" y2="3" />
            </svg>
          )}
          {stat.icon === 'check' && (
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14" />
              <polyline points="22 4 12 14.01 9 11.01" />
            </svg>
          )}
        </div>
        <div class="stat-content">
          <span
            class="stat-value"
            data-count={stat.value}
            data-formatted={formatNumber(stat.value)}
          >
            {formatNumber(stat.value)}
          </span>
          <span class="stat-label">{stat.label}</span>
        </div>
      </div>
    ))}
  </div>
</section>

<script>
  function animateCounters() {
    const counters = document.querySelectorAll('.stat-value[data-count]')

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const el = entry.target as HTMLElement
            if (el.dataset.animated) return
            el.dataset.animated = 'true'

            const target = parseInt(el.dataset.count || '0', 10)
            const formatted = el.dataset.formatted || '0'
            const duration = 1500
            const start = performance.now()

            function update(now: number) {
              const elapsed = now - start
              const progress = Math.min(elapsed / duration, 1)
              // Ease out cubic
              const eased = 1 - Math.pow(1 - progress, 3)
              const current = Math.floor(eased * target)

              // Format the current value similarly
              let display: string
              if (target >= 1000000) {
                display = `${(current / 1000000).toFixed(1)}M`
              } else if (target >= 1000) {
                display = `${(current / 1000).toFixed(1)}K`
              } else {
                display = current.toLocaleString()
              }

              el.textContent = display

              if (progress < 1) {
                requestAnimationFrame(update)
              } else {
                el.textContent = formatted
              }
            }

            // Start from 0
            el.textContent = '0'
            requestAnimationFrame(update)

            observer.unobserve(el)
          }
        })
      },
      { threshold: 0.5 }
    )

    counters.forEach((counter) => observer.observe(counter))
  }

  // Respect reduced motion
  if (!window.matchMedia('(prefers-reduced-motion: reduce)').matches) {
    animateCounters()
    document.addEventListener('astro:after-swap', animateCounters)
  }
</script>

<style>
  .social-proof {
    padding: 2rem 0;
  }

  .social-proof.compact {
    padding: 1.5rem 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    max-width: 48rem;
    margin: 0 auto;
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    padding: 1.5rem 1rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    text-align: center;
    transition: all var(--transition-normal) ease;
  }

  .stat-card:hover {
    border-color: var(--stat-color);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .compact .stat-card {
    padding: 1rem 0.75rem;
    gap: 0.5rem;
  }

  .stat-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 3rem;
    height: 3rem;
    background: color-mix(in srgb, var(--stat-color) 15%, transparent);
    border-radius: var(--radius-lg);
    color: var(--stat-color);
  }

  .compact .stat-icon {
    width: 2.5rem;
    height: 2.5rem;
  }

  .compact .stat-icon svg {
    width: 20px;
    height: 20px;
  }

  .stat-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .stat-value {
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--text-primary);
    font-variant-numeric: tabular-nums;
    line-height: 1.2;
  }

  .compact .stat-value {
    font-size: 1.5rem;
  }

  .stat-label {
    font-size: 0.8125rem;
    color: var(--text-tertiary);
    font-weight: 500;
  }

  .compact .stat-label {
    font-size: 0.75rem;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .stat-card {
      flex-direction: row;
      justify-content: flex-start;
      text-align: left;
      padding: 1rem 1.25rem;
    }

    .stat-content {
      align-items: flex-start;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .stat-card {
      transition: none;
    }

    .stat-card:hover {
      transform: none;
    }
  }
</style>
