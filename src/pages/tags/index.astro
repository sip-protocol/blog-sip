---
import { getCollection } from 'astro:content'
import BaseLayout from '../../layouts/BaseLayout.astro'

const posts = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? !data.draft : true
})

// Get tag counts
const tagCounts = posts.reduce(
  (acc, post) => {
    post.data.tags.forEach((tag) => {
      acc[tag] = (acc[tag] || 0) + 1
    })
    return acc
  },
  {} as Record<string, number>
)

// Sort tags by count (descending)
const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1])
---

<BaseLayout
  title="All Tags"
  description="Browse all tags from the SIP Protocol blog"
>
  <section class="tags-header">
    <h1>All Tags</h1>
    <p class="tag-count">{sortedTags.length} tag{sortedTags.length !== 1 ? 's' : ''}</p>
  </section>

  <section class="tags-cloud">
    {
      sortedTags.length > 0 ? (
        <div class="tags-list">
          {sortedTags.map(([tag, count]) => (
            <a href={`/tags/${tag}/`} class="tag-item">
              <span class="tag-name">#{tag}</span>
              <span class="tag-count-badge">{count}</span>
            </a>
          ))}
        </div>
      ) : (
        <p class="empty">No tags yet.</p>
      )
    }
  </section>

  <a href="/" class="back-link">&larr; Back to all posts</a>
</BaseLayout>

<style>
  .tags-header {
    text-align: center;
    padding: 2rem 0 3rem;
  }

  h1 {
    font-size: 2.5rem;
    margin: 0 0 0.5rem;
    color: rgb(var(--black));
  }

  .tag-count {
    font-size: 0.875rem;
    color: rgb(var(--gray));
  }

  .tags-cloud {
    margin-bottom: 3rem;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .tag-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: white;
    border: 1px solid rgb(var(--gray-light));
    padding: 0.5rem 1rem;
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .tag-item:hover {
    border-color: var(--sip-primary);
    background: rgba(99, 102, 241, 0.05);
  }

  .tag-name {
    color: var(--sip-primary);
    font-weight: 500;
  }

  .tag-count-badge {
    background: rgb(var(--gray-light));
    color: rgb(var(--gray));
    padding: 0.125rem 0.5rem;
    border-radius: 999px;
    font-size: 0.75rem;
  }

  .empty {
    text-align: center;
    padding: 4rem 0;
    color: rgb(var(--gray));
  }

  .back-link {
    display: inline-block;
    color: var(--sip-primary);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--sip-primary-dark);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }
  }
</style>
