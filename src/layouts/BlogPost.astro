---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import ArticleSchema from '../components/ArticleSchema.astro'
import ArticleHero from '../components/ArticleHero.astro'
import TLDRBox from '../components/TLDRBox.astro'
import CopyCodeButton from '../components/CopyCodeButton.astro'
import ReadingProgress from '../components/ReadingProgress.astro'
import PostNavigation from '../components/PostNavigation.astro'
import TableOfContents from '../components/TableOfContents.astro'
import BackToTop from '../components/BackToTop.astro'
import ShareButtons from '../components/ShareButtons.astro'
import RelatedPosts from '../components/RelatedPosts.astro'
import NewsletterCTA from '../components/NewsletterCTA.astro'
import ImageLightbox from '../components/ImageLightbox.astro'
import Toast from '../components/Toast.astro'
import { SITE_URL } from '../consts'

interface NavPost {
  slug: string
  title: string
}

interface Heading {
  depth: number
  slug: string
  text: string
}

type Props = CollectionEntry<'blog'>['data'] & {
  slug: string
  prevPost?: NavPost
  nextPost?: NavPost
  headings?: Heading[]
  readingTime?: number
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  author,
  tags,
  category,
  tldr,
  keyTakeaways,
  canonicalUrl,
  noIndex,
  slug,
  prevPost,
  nextPost,
  headings = [],
  readingTime,
} = Astro.props

const articleUrl = `${SITE_URL}/blog/${slug}/`
// Use hero image if available, otherwise use generated OG image
const ogImageUrl = `${SITE_URL}/og/${slug}.png`
const imageUrl = heroImage ? new URL(heroImage.src, SITE_URL).toString() : ogImageUrl
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage || ogImageUrl}
      type="article"
      publishedTime={pubDate}
      modifiedTime={updatedDate}
      author={author}
      tags={tags}
      canonicalUrl={canonicalUrl}
      noIndex={noIndex}
    >
      <ArticleSchema
        slot="json-ld"
        title={title}
        description={description}
        publishedTime={pubDate}
        modifiedTime={updatedDate}
        author={author}
        image={imageUrl}
        url={articleUrl}
        tags={tags}
      />
    </BaseHead>
  </head>

  <body>
    <ReadingProgress />
    <a href="#main-content" class="skip-link">Skip to content</a>
    <Header />
    <main id="main-content">
      <article itemscope itemtype="https://schema.org/BlogPosting">
        {
          heroImage && (
            <div class="hero-image">
              <Image
                src={heroImage}
                alt={title}
                width={1200}
                height={600}
                itemprop="image"
              />
            </div>
          )
        }

        <ArticleHero
          title={title}
          description={description}
          pubDate={pubDate}
          updatedDate={updatedDate}
          author={author}
          tags={tags}
          category={category}
          readingTime={readingTime}
        />

        <div class="article-container">
          {tldr && <TLDRBox tldr={tldr} keyTakeaways={keyTakeaways} />}

          <TableOfContents headings={headings} />

          <div class="prose" itemprop="articleBody">
            <slot />
          </div>

          <ShareButtons title={title} url={articleUrl} description={description} />

          <NewsletterCTA compact />

          <RelatedPosts currentSlug={slug} currentTags={tags} currentCategory={category} />

          <PostNavigation prevPost={prevPost} nextPost={nextPost} />
        </div>
      </article>
    </main>
    <Footer />
    <CopyCodeButton />
    <BackToTop />
    <Toast />
    <ImageLightbox />
  </body>
</html>

<style>
  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--sip-gradient);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    text-decoration: none;
    font-weight: 500;
    z-index: var(--z-modal);
    transition: top var(--transition-normal) ease;
  }

  .skip-link:focus {
    top: 0;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }

  .hero-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  .article-container {
    max-width: 48rem;
    margin: 0 auto;
    padding: 0 1.5rem 4rem;
  }

  .prose {
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .prose :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .prose :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(a) {
    color: var(--sip-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color var(--transition-fast) ease;
  }

  .prose :global(a:hover) {
    color: var(--sip-primary-hover);
  }

  .prose :global(pre) {
    margin: 1.5rem 0;
    border-radius: var(--radius-lg);
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--sip-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-tertiary);
    font-style: italic;
  }

  .prose :global(ul),
  .prose :global(ol) {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .article-container {
      padding: 0 1rem 3rem;
    }
  }
</style>
