---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import FormattedDate from '../components/FormattedDate.astro'
import ArticleSchema from '../components/ArticleSchema.astro'
import TLDRBox from '../components/TLDRBox.astro'
import CopyCodeButton from '../components/CopyCodeButton.astro'
import ReadingProgress from '../components/ReadingProgress.astro'
import PostNavigation from '../components/PostNavigation.astro'
import TableOfContents from '../components/TableOfContents.astro'
import { SITE_URL } from '../consts'

interface NavPost {
  slug: string
  title: string
}

interface Heading {
  depth: number
  slug: string
  text: string
}

type Props = CollectionEntry<'blog'>['data'] & {
  slug: string
  prevPost?: NavPost
  nextPost?: NavPost
  headings?: Heading[]
}

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  author,
  tags,
  category,
  tldr,
  keyTakeaways,
  canonicalUrl,
  noIndex,
  slug,
  prevPost,
  nextPost,
  headings = [],
} = Astro.props

const articleUrl = `${SITE_URL}/blog/${slug}/`
// Use hero image if available, otherwise use generated OG image
const ogImageUrl = `${SITE_URL}/og/${slug}.png`
const imageUrl = heroImage ? new URL(heroImage.src, SITE_URL).toString() : ogImageUrl
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={heroImage || ogImageUrl}
      type="article"
      publishedTime={pubDate}
      modifiedTime={updatedDate}
      author={author}
      tags={tags}
      canonicalUrl={canonicalUrl}
      noIndex={noIndex}
    >
      <ArticleSchema
        slot="json-ld"
        title={title}
        description={description}
        publishedTime={pubDate}
        modifiedTime={updatedDate}
        author={author}
        image={imageUrl}
        url={articleUrl}
        tags={tags}
      />
    </BaseHead>
  </head>

  <body>
    <ReadingProgress />
    <a href="#main-content" class="skip-link">Skip to content</a>
    <Header />
    <main id="main-content">
      <article itemscope itemtype="https://schema.org/BlogPosting">
        {
          heroImage && (
            <div class="hero-image">
              <Image
                src={heroImage}
                alt={title}
                width={1200}
                height={600}
                itemprop="image"
              />
            </div>
          )
        }

        <div class="article-container">
          <header class="article-header">
            <div class="article-meta">
              {category && <span class="category">{category}</span>}
              <time datetime={pubDate.toISOString()} itemprop="datePublished">
                <FormattedDate date={pubDate} />
              </time>
              {
                updatedDate && (
                  <span class="updated">
                    (Updated:{' '}
                    <time
                      datetime={updatedDate.toISOString()}
                      itemprop="dateModified"
                    >
                      <FormattedDate date={updatedDate} />
                    </time>
                    )
                  </span>
                )
              }
            </div>

            <h1 itemprop="headline">{title}</h1>

            {
              author && (
                <div class="author" itemprop="author" itemscope itemtype="https://schema.org/Person">
                  <span itemprop="name">{author}</span>
                </div>
              )
            }

            {
              tags && tags.length > 0 && (
                <div class="tags">
                  {tags.map((tag) => (
                    <a href={`/tags/${tag}/`} class="tag">
                      #{tag}
                    </a>
                  ))}
                </div>
              )
            }
          </header>

          {tldr && <TLDRBox tldr={tldr} keyTakeaways={keyTakeaways} />}

          <TableOfContents headings={headings} />

          <div class="prose" itemprop="articleBody">
            <slot />
          </div>

          <PostNavigation prevPost={prevPost} nextPost={nextPost} />
        </div>
      </article>
    </main>
    <Footer />
    <CopyCodeButton />
  </body>
</html>

<style>
  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--sip-gradient);
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    text-decoration: none;
    font-weight: 500;
    z-index: var(--z-modal);
    transition: top var(--transition-normal) ease;
  }

  .skip-link:focus {
    top: 0;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    flex: 1;
  }

  .hero-image {
    width: 100%;
    max-height: 500px;
    overflow: hidden;
  }

  .hero-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 0;
  }

  .article-container {
    max-width: 48rem;
    margin: 0 auto;
    padding: 2rem 1.5rem 4rem;
  }

  .article-header {
    margin-bottom: 2rem;
    text-align: center;
  }

  .article-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    font-size: 0.875rem;
    color: var(--text-tertiary);
  }

  .category {
    background: var(--sip-gradient);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .updated {
    font-style: italic;
    color: var(--text-muted);
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin: 0 0 1rem;
    color: var(--text-primary);
    letter-spacing: -0.03em;
  }

  .author {
    font-size: 0.9375rem;
    color: var(--text-tertiary);
    margin-bottom: 1rem;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--sip-primary);
    background: rgba(99, 102, 241, 0.1);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-sm);
    text-decoration: none;
    transition: all var(--transition-fast) ease;
  }

  .tag:hover {
    background: var(--sip-primary);
    color: white;
  }

  .prose {
    line-height: 1.8;
    color: var(--text-secondary);
  }

  .prose :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .prose :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .prose :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose :global(a) {
    color: var(--sip-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color var(--transition-fast) ease;
  }

  .prose :global(a:hover) {
    color: var(--sip-primary-hover);
  }

  .prose :global(pre) {
    margin: 1.5rem 0;
    border-radius: var(--radius-lg);
  }

  .prose :global(blockquote) {
    border-left: 4px solid var(--sip-primary);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-tertiary);
    font-style: italic;
  }

  .prose :global(ul),
  .prose :global(ol) {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.5rem;
  }

  .prose :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.75rem;
    }

    .article-container {
      padding: 1.5rem 1rem 3rem;
    }
  }
</style>
